    <file path="admin/language/ua-uk/catalog/product.php">
        <operation>
            <search><![CDATA[$_['column_name']]]></search>
            <add position="before"><![CDATA[$_['column_category']            = 'Категорія';]]></add>
        </operation>
    </file>

</modification>
